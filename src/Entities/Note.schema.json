{
  "name": "Note",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Note title"
    },
    "content": {
      "type": "string",
      "description": "Note content in markdown format"
    },
    "subjectId": {
      "type": "string",
      "description": "Associated subject ID"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Note tags for organization"
    },
    "isPinned": {
      "type": "boolean",
      "default": false,
      "description": "Whether the note is pinned"
    },
    "lastModified": {
      "type": "string",
      "format": "date-time",
      "description": "Last modification date"
    }
  },
  "required": [
    "title",
    "content"
  ],
  "x-accessControl": {
    "permissions": {
      "read": "creator",
      "write": "creator"
    }
  }
}