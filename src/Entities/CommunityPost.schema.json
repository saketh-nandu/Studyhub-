{
  "name": "CommunityPost",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Post title"
    },
    "content": {
      "type": "string",
      "description": "Post content"
    },
    "groupId": {
      "type": "string",
      "description": "Associated group ID"
    },
    "type": {
      "type": "string",
      "enum": [
        "text",
        "file",
        "link",
        "video",
        "code",
        "document"
      ],
      "default": "text"
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "size": {
            "type": "number"
          }
        }
      },
      "default": []
    },
    "likes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "comments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "default": []
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "isPinned": {
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "title",
    "content",
    "groupId"
  ],
  "x-accessControl": {
    "permissions": {
      "read": "all",
      "write": "creator"
    }
  }
}